<%- include('../partials/header') %>

<form id="playerform" action="/users/<%= user._id %>/faveplayers" method="POST">
<h2><%= response.full_name %></h2>

    <%= response.full_name %>
    <%= response.height %>
    <%= response.weight %>
    <%= response.position %>
    <%= response.jersey_number %>
    <%= response.experience %>

    <% response.seasons.forEach(function(id) { %>
    <br>
    <%= id.year %>
        <% id.teams.forEach(function(innerid) { %>
            <%= innerid.market %>
            <%= innerid.name %>
            <%= innerid.total.games_played %>
        <% }); %>    
    <% }); %>

<select id="playerIdSubmit" name="playerId"><option value="<%= response.id %>"><%= response.id %></option></select>
<select id="faveplayersSubmit" name="faveplayers"><option value="<%= response.full_name %>"><%= response.full_name %></option></select>
<input type='submit' value='Add Player to Favorites'>
</form>

<%- include('../partials/footer') %>